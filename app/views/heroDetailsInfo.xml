<Alloy>
	<View class="infoContainer">
	  <View id="spacer" height="8" platform="android"></View>
	  <View id="spacer" height="4"></View>
		<View id="survivabilityContainer" class="difficulty">
			<Label text="L('Survivability')"></Label>
		</View>
		<View id="damageContainer" class="difficulty">
			<Label text="L('Damage')"></Label>
		</View>
		<View id="utilityContainer" class="difficulty">
			<Label text="L('Utility')"></Label>
		</View>
		<View id="complexityContainer" class="difficulty">
			<Label text="L('Complexity')"></Label>
		</View>
		
		<View class="separator"></View>
		
		<View class="statsBlock">
  		<View class="statsContainer">
  		  <View class="stat" id="hpContainer">
          <Label class="statLabel" id="initialHealth"></Label>
          <Label class="statLabel2" id="initalHealthIncrement"></Label>
          <ImageView image="/images/icon-health.png" class="statIcons"></ImageView>
          <Label class="statLabel3" id="healthRegen"></Label>
          <Label class="statLabel2" id="healthRegenIncrement"></Label>
        </View>
        <View class="stat" id="manaContainer">
          <Label class="statLabel" id="initialMana"></Label>
          <Label class="statLabel2" id="initalManaIncrement"></Label>
          <ImageView image="/images/icon-mana.png" class="statIcons"></ImageView>
          <Label class="statLabel3" id="manaRegen"></Label>
          <Label class="statLabel2" id="manaRegenIncrement"></Label>
        </View>
        <View class="stat" id="attackContainer">
          <Label class="statLabel" id="initialDamage"></Label>
          <Label class="statLabel2" id="damageIncrement"></Label>
          <ImageView image="/images/icon-damage.png" class="statIcons"></ImageView>
          <Label class="statLabel3" id="damageSpeed"></Label>
        </View>
  		</View>
		</View>
		
		<View class="separator"></View>
		
		<View class="loreContainer">
			<Label id="loreData"></Label>
		</View>
		
		<View id="spacer" height="60" platform="android"></View>

	</View>
</Alloy>